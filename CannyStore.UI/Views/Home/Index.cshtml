@model CannyStore.Core.ViewModels.ProductListVM
@{
    ViewBag.Title = "Home Page";
}

<div class="container">
<h1>Products</h1>
<div class="">
    <h4>Filter By Category</h4>
    <div class="list-group">
        @Html.ActionLink("All","Index", null,
       new 
       {
           @class = Request["Category"] == null ? "list-group-item-action active" 
           : "list-group-item list-group-item-action"
       })
        @foreach (var cat in Model.ProductCategories)
        {
            @Html.ActionLink(cat.Category, "Index",
           new {Category = cat.Category}, new
           {
               @class = Request["Category"] == null ? "list-group-item-action active":
               "list-group-item list-group-item-action"
           })
        }
    </div>
</div>
<div class="">
    @foreach(var item in Model.Products)
    {
        <div class="row">
        <div class="product">
            <div class="col-md-12">
                <img class="img-fluid image" src="~/Content/ProductImages/@item.Image" />
            </div>
            <div class="col-md-12">
                <strong>@Html.ActionLink(item.Name, "Details", new {id = item.Id})</strong>
            </div>
            <div class="col-md-12">
                <p>@item.Description</p>
            </div>
            <div class="col-md-12">
                <h4>R @item.Price</h4>
            </div>
            <div class="col-md-12">
                <a href="@Url.Action("addToCart", "Cart", new {Id = item.Id})" class="btn btn-success">Add To Cart</a>
            </div>
        </div>
        </div>
    }
</div>
</div>
<style>
    .product {
        display: inline-block;
        width: 100%
    }
</style>